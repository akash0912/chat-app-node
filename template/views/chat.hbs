<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat App</title>
    <link rel="stylesheet" href="/css/styles.min.css" />
    <link rel="icon" href="/img/favicon.png" />
  </head>
  <body>
    <div class="chat">
      <div class="chat__sidebar">

      </div>
      <div class="chat__main">
        <div id="messages" class="chat__messages"></div>
        <div class="compose">

          <form class="form-container">
            <input id="input" placeholder="Say something..." />
            <button id="btn-send">Send</button>
          </form>
          <button id="send-location">Send Location</button>
        </div>
      </div>
    </div>

    <script id="message-template" type="text/html">
      <div class="message">
      {{#raw}}
        <p> <span class="message__name">User 1</span> <span
        class="message__meta">\{{createdAt}}</span> </p> <p>\{{message}}</p>
      {{/raw}}
      </div>
    </script>

    <script id="location-template" type="text/html">
      <div class="message">
      {{#raw}}
        <p> <span class="message__name">User 1</span> <span
        class="message__meta">\{{createdAt}}</span> </p> <p><a href=\{{url}}
        target="_blank">My Current Location</a></p>
      {{/raw}}
      </div>
    </script>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js"
    ></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/script/chat.js"></script>
  </body>
</html>